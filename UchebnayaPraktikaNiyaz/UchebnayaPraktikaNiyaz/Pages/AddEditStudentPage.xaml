<Page x:Class="UchebnayaPraktikaNiyaz.Pages.AddEditStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchebnayaPraktikaNiyaz.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditStudentPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel  HorizontalAlignment="Right" Margin="10" Orientation="Horizontal">
                <Label Content="Код специальности"></Label>
                <ComboBox x:Name="SpecCb" Margin="0 5 0 22" Width="200" Height="30"></ComboBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Margin="10" Orientation="Horizontal">
                <Label Content="ФИО студента"></Label>
                <TextBox x:Name="FIOTb" Width="200" Text="{Binding Surname_Student}"></TextBox>
            </StackPanel>

                <Button x:Name="SaveBtn" VerticalAlignment="Bottom" Width="150" Content="Сохранить" Click="SaveBtn_Click"></Button>

            
        </StackPanel>


    </Grid>
</Page>
