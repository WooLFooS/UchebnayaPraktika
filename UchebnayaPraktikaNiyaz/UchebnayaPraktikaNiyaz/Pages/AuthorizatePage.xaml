<Page x:Class="UchebnayaPraktikaNiyaz.Pages.AuthorizatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchebnayaPraktikaNiyaz.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizatePage">
    <Grid>
        <StackPanel Background="#F7F7F7" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите пароль" HorizontalAlignment="Center" Margin="0 0 0 7"></Label>
            <PasswordBox x:Name="PasswordPb" BorderThickness="3" BorderBrush="#3F4C6B" Width="100" Margin="30"></PasswordBox>
            <Button x:Name="EnterBtn" Content="ВОЙТИ" FontSize="25" Width="500" Height="70" Margin="0 0 0 0" Click="EnterBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
