<Page x:Class="UchebnayaPraktikaNiyaz.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchebnayaPraktikaNiyaz.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontFamily="ArialBlack">Списки</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="StudentBtn" Width="90" Click="StudentBtn_Click">Студенты</Button>
                <Button x:Name="ExamBtn" Width="90" Click="ExamBtn_Click">Экзамены</Button>
                <Button x:Name="EmployeeBtn" Width="110" Click="EmployeeBtn_Click" >Сотрудники</Button>
                <Button x:Name="DisciplineBtn" Width="110" Click="DisciplineBtn_Click">Дисциплины</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
